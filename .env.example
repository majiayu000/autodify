# ============================================
# Autodify 环境配置示例
# ============================================
# 复制此文件为 .env 并填写实际值

# --------------------------------------------
# LiteLLM 配置
# --------------------------------------------
LITELLM_PORT=4000
LITELLM_MASTER_KEY=sk-autodify-your-secret-key

# LLM API Keys（至少配置一个）
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
DEEPSEEK_API_KEY=sk-...

# --------------------------------------------
# 服务端口配置
# --------------------------------------------
SERVER_PORT=3001
WEB_PORT=3000

# --------------------------------------------
# LLM 提供商配置
# --------------------------------------------
LLM_PROVIDER=openai
LLM_BASE_URL=http://localhost:4000/v1
LLM_API_KEY=${LITELLM_MASTER_KEY}
LLM_DEFAULT_MODEL=gpt-4o

# --------------------------------------------
# 前端配置
# --------------------------------------------
VITE_API_URL=http://localhost:3001

# --------------------------------------------
# 日志配置
# --------------------------------------------
LOG_LEVEL=info

# --------------------------------------------
# 速率限制配置
# --------------------------------------------
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# --------------------------------------------
# 缓存配置
# --------------------------------------------
# 全局缓存开关
CACHE_ENABLED=true

# 服务端响应缓存配置
CACHE_TEMPLATES_TTL=300000        # 模板列表缓存 TTL（毫秒），默认 5 分钟
CACHE_TEMPLATES_MAX_SIZE=50       # 最大缓存条目数

# Core 模板匹配缓存配置
TEMPLATE_CACHE_ENABLED=true       # 启用模板匹配缓存
TEMPLATE_CACHE_MAX_SIZE=100       # 最大缓存条目数
TEMPLATE_CACHE_TTL=                # TTL（毫秒），不设置则永久缓存
TEMPLATE_CACHE_STATS=false        # 启用统计信息

# Core 节点注册表缓存配置
NODE_CACHE_ENABLED=true           # 启用节点查询缓存
NODE_CACHE_MAX_SIZE=50            # 最大缓存条目数
NODE_CACHE_TTL=                   # TTL（毫秒），不设置则永久缓存
NODE_CACHE_STATS=false            # 启用统计信息

# --------------------------------------------
# 开发环境额外配置
# --------------------------------------------
POSTGRES_PORT=5432
REDIS_PORT=6379
